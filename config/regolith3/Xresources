! Use alt as modifier key 
wm.mod: Mod1
wm.alt: Mod4

! Setting caps lock to escape can be done with:
! gsettings set org.gnome.desktop.input-sources xkb-options "['caps:escape']"
!
! Always have gaps, even if a window is the only 
! window in the workspace
wm.gaps.smart: off

wm.bar.position: top

! Bindings 
wm.binding.exit_app: q 
wm.binding.launcher.app: d
wm.binding.file_search: Shift+d
wm.binding.launcher.window: Shift+w
wm.binding.lock: Shift+p
wm.binding.sleep: Shift+s


! Dummy keys to remove the keybinding
wm.binding.display: KP_1 
wm.binding.settings: KP_2 
wm.binding.wifi: KP_3 
wm.binding.bluetooth: KP_4 
wm.binding.files: KP_5
wm.binding.inc_gaps: KP_6
wm.binding.dec_gaps: KP_7
wm.binding.inc_gaps_big: KP_8
wm.binding.dec_gaps_big: KP_9
wm.binding.launcher.cmd: Shift+KP_1
wm.binding.logout: Shift+KP_2
wm.binding.reboot: Shift+KP_3
wm.binding.shutdown: Shift+KP_4
wm.carry_container_to_ws_key: Shift+KP_5

! Theme
regolith.wallpaper.file: $HOME/Pictures/wallpaper.jpg
regolith.lockscreen.wallpaper.file: $HOME/Pictures/wallpaper.jpg
regolith.look.path: /usr/share/regolith-look/lascaille
