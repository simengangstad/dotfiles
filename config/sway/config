# set $default_audio_device alsa_output.pci-0000_0b_00.4.analog-stereo
set $default_audio_device alsa_output.pci-0000_09_00.1.hdmi-stereo-extra4

set $primary_monitor HDMI-A-2
set $secondary_monitor HDMI-A-1

set $mod Mod1
set $term alacritty
set $menu wofi --show=drun --height=200 --width=500 --prompt=""

output $secondary_monitor mode 1920x1080 position 0,0 transform 90
output $primary_monitor mode 1920x1080 position 1080,390
focus output $primary_monitor

input type:keyboard {
    xkb_layout us
    xkb_options caps:escape
}

# Define layout for workspaces
workspace 1 output $primary_monitor
workspace 2 output $primary_monitor
workspace 3 output $primary_monitor
workspace 4 output $primary_monitor
workspace 5 output $secondary_monitor
workspace 6 output $secondary_monitor
workspace 7 output $secondary_monitor
workspace 8 output $secondary_monitor

